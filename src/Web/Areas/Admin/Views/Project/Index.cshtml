@model GetAllProjectsResult

@{
    ViewData["Title"] = "Projeler";
}

<div class="container">
    <h2>Projeler</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Yeni Proje Ekle</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Açıklama</th>
                <th>Kategori ID</th>
                <th>Tarih</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model.Projects)
            {
                <tr>
                    <td>@project.Name</td>
                    <td>@project.Description</td>
                    <td>@project.CategoryId</td>
                    <td>@project.Date.ToShortDateString()</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@project.Id" class="btn btn-warning">Düzenle</a>
                        <form asp-action="Delete" asp-route-id="@project.Id" method="post" style="display: inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 