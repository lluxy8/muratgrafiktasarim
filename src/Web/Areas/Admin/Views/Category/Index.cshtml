@model GetAllCategoriesResult

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container">
    <h2>Kategoriler</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Yeni Kategori Ekle</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ad</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning">Düzenle</a>
                        <form asp-action="Delete" asp-route-id="@category.Id" method="post" style="display: inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 