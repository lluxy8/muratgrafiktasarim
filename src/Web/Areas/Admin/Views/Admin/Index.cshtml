@model GetAllAdminsResult

@{
    ViewData["Title"] = "Adminler";
}

<div class="container">
    <h2>Adminler</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Yeni Admin Ekle</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Email</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var admin in Model.Admins)
            {
                <tr>
                    <td>@admin.Name</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@admin.Id" class="btn btn-warning">Düzenle</a>
                        <form asp-action="Delete" asp-route-id="@admin.Id" method="post" style="display: inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 